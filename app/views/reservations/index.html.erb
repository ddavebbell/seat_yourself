<h2>Reservation index</h2>

<h2>Dummy Name</h2>

<%= form_for @reservation do |f| %>
	<% two_months_in_weeks(@date).each do |week| %>
		<% week.each do |day| %>

			<% if day.monday? || day.tuesday? %>
				<div class="days_closed">
					<%= "Restaurant closed" %><br>
				</div>
			<% else %>
				<div class="days_open">
					<%= f.radio_button :reservation_time, 'reservation_time' %>
  				<%= f.label :contactmethod, day.strftime('%a %d %b %Y'), :value => 'reservation_time' %>
				</div>
			<% end %>
		<% end %>
	<% end %>

	<%= f.submit %>
<% end %>
