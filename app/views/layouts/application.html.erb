<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if flash[:alert] %>
    <ul>
      <% if flash[:alert].class == String %>
        <li><%= flash[:alert] %></li>
      <% else %>
        <% flash[:alert].each do |message| %>
          <li><%= message %></li>
        <% end %>
      <% end %>
    </ul>
  <% end %>

  <% if logged_in? %>
    <%= link_to "Create New Restaurant", new_restaurant_path %> | <%= link_to "Log out", logout_path, method: :delete %>
    You are logged in as: <%= current_user.email %>!
  <% else %>
    <%= link_to "Create New Account", new_user_path %>
  	<%= link_to "Log in", '/login' %>
  <% end %>

<%= yield %>

</body>
</html>
