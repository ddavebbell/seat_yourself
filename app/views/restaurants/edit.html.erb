<p>restaurant profile page for restaurant owners</p>

<% if current_user_is_restaurant_owner?(@restaurant) %>
	<%= link_to "Log out", logout_path, method: :delete %>

	<p>You are logged in as: <%= current_user.email %>!
	You are editing <%= @restaurant.name %></p>
	<h3>Set business hours</h3>

	<%= form_for @restaurant, method: :patch do |f| %>
	<div class='field'>
		<%= f.label :open_time %>
		<%= f.time_field :open_time, {:default => {:hour => @restaurant.open_time.hour, :minute => @restaurant.open_time.min}} %>
	</div>
	<div class='field'>
		<%= f.label :closing_time %>
		<%= f.time_field :closing_time, {:default => {:hour => @restaurant.closing_time.hour, :minute => @restaurant.closing_time.min}} %>
	</div>
	<div class='field'>
		<%= f.label :maximum_capacity %>
		<%= f.number_field :maximum_capacity, {:default => {:value => @restaurant.maximum_capacity}} %>
	</div>
		<%= f.submit "Adjust Opening and Closing Times" %>
	<% end %>


<% else %>
	<%= link_to "Create New Account", new_user_path %>
	<%= link_to "Log in", '/login' %>
<% end %>
